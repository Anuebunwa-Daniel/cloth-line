<body style="font-family: 'Roboto', sans-serif;">
  <header class="top-header">

    <div class="header-info-section">
      <span> <i class="fa-solid fa-envelope"></i><a href="#">info@Bigstepers.com</a></span>
      <span> <i class="fa-solid fa-phone"> 08036541679</i></span>
    </div>

    <div class="cart-section" >
 
     
      <a style="color:white; text-decoration: none;" href="/cart/checkout"><i class="fa-solid fa-cart-shopping">
        <span class="cartNum">
      <% if(typeof cart !== "undefined"){  %>
        <%= cart.length %>
        <% }else{ %>
          0
        <% } %>
        </span>
      </i>
      </a>
      <i class="fa-brands fa-facebook"></i>
      <i class="fa-brands fa-linkedin"></i>
      <i class="fa-brands fa-instagram"></i>
    </div>

    <div class="auth">
   
      
   
    </div>
  </header>



  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">BigStepper</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="menu" role="button" data-bs-toggle="dropdown"
              aria-expanded="false">
              Categories
            </a>
            <ul class="dropdown-menu" aria-labelledby="menu">
              <li><a class="dropdown-item btn btn-success" href="/products">All Products</a></li>
              <li class="dropdown">
              </li>
              <% categories.forEach((cat)=> { %>
              <li><a  class="dropdown-item btn btn-success" href="/products/<%= cat.slug %>"><%= cat.title %></a></li>
              <% }) %>
           
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact us</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  
  <div class="ajaxbg">
    <div class="ajaxinner">
      <h5 class="ajaxT">YOU ARE NOW BEING REDIRECTED TO PAYPAL</h5>
      <img class="" id="ajax" src="/img/loader.gif" alt="">

    </div>
  </div>

  <%- messages('messages', locals) %>

  <% if (errors) {%>
    <% errors.forEach((errors)=>{ %>
      <div class=" alert alert-danger">
        <%= errors.msg %>
      </div>
      <% }) %>
        <% } %>
