<%- include('../layouts/adminheader') %>

    <h2 class="page-title">Products</h2>
    <a href="/admin/products/add_product" class="btn btn-success">Add  products</a>
    <a href="/admin/products" class="btn btn-success">Back</a>
    <br><br>
  
    <table class="table table-striped alignmiddle">
        <thead>
            <tr class="home">
                <th>Product</th>
                <th>Price</th>
                <th>Category</th>
                <th>Product image</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach((product)=>{ %>
                <tr>
                    <td><%= product.title %></td>
                    <td>$<%= parseFloat(product.price).toFixed(2)%></td>
                    <td><%= product.category %></td>
                    <td>
                       <img id="proImage" src="/product_images/<%= product.slug %>/<%= product.image %>" alt=""> 
                         
                    </td>
                    <td><a href="/admin/products/edit-product/<%= product._id %> ">Edit</a></td>

                    <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %> ">Delete</a></td>
        

                </tr>
                <% }) %>

        </tbody>
    </table>

  

    <%- include('../layouts/adminfooter') %>