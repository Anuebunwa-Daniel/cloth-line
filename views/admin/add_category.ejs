<%- include('../layouts/adminheader') %>

    <h2 class="page-title">Add category</h2>
    <a href="/admin/categories" class="btn btn-success">Back to all categories</a>
    <br><br>

    <form method="post" action="/admin/categories/add_category" enctype="multipart/form-data">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" name="title"  placeholder="Title" value="<%= title %>">
        </div>

        <div class="form-group">
            <label for="">Image</label>
            <input type="file" class="form-control" name="image" id="img" onchange="previewImage(event);" />

            <img src="#" id="imgPreview" alt="">
        </div>
       <br>
        <button class="btn btn-success">Submit</button>
    </form>

    <%- include('../layouts/adminfooter') %>